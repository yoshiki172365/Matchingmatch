<%= render 'main/header' %>
<div class="contents-row">
  <div class="container">
    <h1>Sign up</h1>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :name, autofocus: true, maxlength: "6", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "submit" %>
      </div>
    <% end %>
  </div>
</div>